					char x = input.next().charAt(0);	
					if( x == 'y'){ clearConsole(); AddSupliers();}else{clearConsole(); StockManage();}	
				}		
			}else{
				System.out.printf("|********************************************************************|%n");	
				System.out.printf("|           OOPS !  Not Added Item Category  On this System          |%n");
				System.out.printf("|********************************************************************|%n");	
