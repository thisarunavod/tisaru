import java.util.*;
class Main {
	public static Scanner input =new Scanner(System.in);
	public static Random r =new Random();
	public static String uN = "1";
	public static String pW = "1";
	public static boolean flag = false;
	public static boolean flag2 = false;
	public static String [] supId ={};
	public static String [][] supName = new String[0][1];
	public static String [] ItemCatogery = {}; 
	public static String [][] ItemDetails = new String [0][6];
	public static String[] ItemCode = {};
	public static String[] Decription = {};
	public static String[] UnitPrice = {};
	public static String[] QtyOnHand = {};
	private final static void clearConsole() {
		final String os = System.getProperty("os.name");
		try {
			if (os.equals("Linux")) {
			System.out.print("\033\143");
		} else if (os.equals("Windows")) {
			new ProcessBuilder("cmd", "/c", "cls").inheritIO().start().waitFor();
		} else {
			System.out.print("\033[H\033[2J");
			System.out.flush();
		}
		} catch (final Exception e) {
		//handle the exception
		System.err.println(e.getMessage());
		}
	}
									
	public static void main(String args[]) {
					
		LogingPage();
		
	}
	public static void LogingPage(){
		
		System.out.print("----------------------------------------------------------------------\n");
		System.out.print("|                   LOGGING TO  GOODS STOCK SYSTEM                   |\n");
		System.out.print("----------------------------------------------------------------------\n");
		for (int i = 0; i < 3 ; i++){
			System.out.print("|                                                                    |\n");
		}
		
		System.out.printf("|                %-15s:","USERNAME");    
L1:		while(true){
			String usernName = input.next();
			if(usernName.equals(uN)){break L1;}
			else{
				System.out.printf("%n|                %-15s                 |","Invalid Username!! Please try Again");
				System.out.printf("%n|                %-15s:","        ");continue L1;
			}
		}
		System.out.printf("|                %-15s:","PASSWORD");
L2:		while(true){
			String Password = input.next();
			if(Password.equals(pW)){System.out.printf("%n|                      %-15s%n%n%n%n%n%n%n%n%n%n%n%n","LOGING SUCCESFULL");clearConsole(); WelcomePage();break L2;}
			else{
				System.out.printf("%n|                %-15s                 |","Invalid Password!! Please try Again");
				System.out.printf("%n|                %-15s:","        ");continue L2;
			}
		}
	}
	
	public static void WelcomePage(){
		
		int answer;
		System.out.print("----------------------------------------------------------------------\n");
