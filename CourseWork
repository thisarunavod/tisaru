	}
	// Create Item category Management Menu page
	public static void ManageItemCatogery(){
		int answer;
		System.out.print("----------------------------------------------------------------------\n");
		System.out.print("|                        ITEM CATEGORY MANAGEMENT                    |\n");
		System.out.print("----------------------------------------------------------------------\n");
		System.out.printf("|                                                                    |%n");
		System.out.printf("|                                                                    |%n");
		System.out.printf("|     -------------------------------------------                    |%n");
		System.out.printf("|     | 1 | %-35s |    	             |%n"," TO Add NEW ITEM CATEGORY");
		System.out.printf("|     -------------------------------------------                    |%n");
		System.out.printf("|     | 2 | %-35s |    	             |%n"," TO DELETE ITEM CATEGORY");
		System.out.printf("|     -------------------------------------------                    |%n");
		System.out.printf("|     | 3 | %-35s |    	             |%n"," TO UPDATE ITEM CATEGORY");
		System.out.printf("|     -------------------------------------------                    |%n");  
		System.out.printf("|     | 4 | %-35s |    	             |%n"," TO Previous PAGE");
		System.out.printf("|     -------------------------------------------                    |%n");
		System.out.printf("|                                                                    |%n");
		System.out.printf("|                                                                    |%n");
		
L1:		while(true){
			System.out.printf("|     GO (Please Input Number) : ");
			answer = input.nextInt();
			if(answer > 4 | answer < 0){System.out.printf("|     Invalid Number !!!  Enter the Correct numbers      %n"); continue L1;}
			else{break L1;}
		}
		if(answer == 4){ clearConsole(); StockManage();}
		if(answer == 1){ clearConsole(); AddNewItemCategory();}
		if(answer == 2){
			if(flag2){  clearConsole();	DeleteItemCategory();}
			else{
				clearConsole();
				CreateFrameOnItemCategorySlide(" DELETE ITEM CATEGORY");
				System.out.printf("|   You Did Not ADD Item Category Name . Please Add Firstly          |%n");
				System.out.printf("|********************************************************************|%n");	
				System.out.printf("|     %-40s :  ","Do You Need Add Item Categorey - ");
				char x = input.next().charAt(0);
				if(x == 'y'){clearConsole(); AddNewItemCategory(); }
				else{clearConsole(); ManageItemCatogery();}
			}	
		}
		if(answer == 3){	
			if(flag2){  clearConsole();	UpdateItemCategory();}
			else{
				clearConsole();
				CreateFrameOnItemCategorySlide(" UPDATE ITEM CATEGORY");
				System.out.printf("|   You Did Not ADD Item Category Name . Please Add Firstly          |%n");
				System.out.printf("|********************************************************************|%n");	
				System.out.printf("|     %-40s :  ","Do You Need Add Item Categorey - ");
				char x = input.next().charAt(0);
				if(x == 'y'){clearConsole(); AddNewItemCategory(); }
				else{clearConsole(); ManageItemCatogery(); }
			}	
		}
		
	}
	// Add new Item category page
	public static void AddNewItemCategory(){
		
		CreateFrameOnItemCategorySlide("Add NEW ITEM CATEGORY");
L1:		while(true){
			
			System.out.printf("|     Enter the new Catogery Name : ");
			String name = input.next();
			flag2 = true;
			ItemCatogery = growIC();
			ItemCatogery[ItemCatogery.length - 1] = name;
			System.out.printf("|*****Item Category Name Entered Successfully*********|%n");		
			System.out.printf("|--------------------------------------------------------------------|%n");
			System.out.printf("|                                                                    |%n");
			
			System.out.printf("|     Do You Need Add more Item Category : ");
			char x = input.next().charAt(0);
			if(x == 'y' || x == 'Y' ){ clearConsole(); CreateFrameOnItemCategorySlide("Add NEW ITEM CATEGORY"); continue L1;}
			else{ clearConsole(); ManageItemCatogery(); break L1;}
				
		}			
	}
	// To Grow ItemCategory Array 
	public static String[] growIC(){
		String [] temp = new  String[ItemCatogery.length+1];
		for (int i = 0; i < ItemCatogery.length; i++){
			temp[i] = ItemCatogery[i];
		}
		
		ItemCatogery = temp;
		return ItemCatogery; 
		
	}
	// Item Category delete page
	public static void DeleteItemCategory(){
		CreateFrameOnItemCategorySlide(" DELETE ITEM CATEGORY");
L1:		while(true){	
			System.out.printf("|     Enter the Catogery Name (for Delete) :  ");
			String name = input.next();
			for (int i = 0; i < ItemCatogery.length ; i++){
				if(name.equals(ItemCatogery[i])){
					RemoveItemcatogery(i,name);
					System.out.printf("|                                                                    |%n");	
					System.out.printf("|               Item Category Name DELETED Succesfully               |%n");	
					System.out.printf("|--------------------------------------------------------------------|%n");	
					System.out.printf("|     Do You need DELETE More       :        ");
					char x;
					x = input.next().charAt(0);
					if(x == 'y'){ clearConsole(); CreateFrameOnItemCategorySlide(" DELETE ITEM CATEGORY"); continue L1;}
					else{ clearConsole(); ManageItemCatogery(); break L1;}
								
				}
				if( i == ItemCatogery.length-1){
					System.out.printf("|           Cant Find this Category Name Please Try Again            |%n");	
				}
			} 	
		}	
	}	
	public static void RemoveItemcatogery(int index , String name){
		
		String[] temp = new String [ItemCatogery.length - 1];
		for (int i = 0; i < temp.length; i++){
			if(i >= index){ temp[i] = ItemCatogery[i+1];}
			else{temp[i] = ItemCatogery[i];}
		}
		ItemCatogery = temp;
		///////////////////////////////////////////////////////////
		    // delete Relavant Item details with delete relavant  Itemcategory names     
		for (int i = 0; i < ItemDetails.length; i++){
			if(ItemDetails[i][2].equals(name)){
				ItemDetails = RemoveItemDetails(i);
				i--;
			} 
		}
		///////////////////////////////////////////////////////////////
		if(ItemCatogery.length == 0){
			flag2 = false;  
			clearConsole();
			System.out.printf("|     ALL  Item Catogery Name Deleted. Please Add Item Catogery      |%n");
			System.out.printf("|********************************************************************|%n");	
			ManageItemCatogery();	
		} 
	}
	// Update Item category Page
	public static void UpdateItemCategory(){
		CreateFrameOnItemCategorySlide(" UPDATE ITEM CATEGORY");

L1:		while(true){	
			System.out.printf("|     %-40s :  ","Enter the Catogery Name (for Update)");
			String name = input.next();
			System.out.printf("|                                                                    |%n");
			
			for (int i = 0; i < ItemCatogery.length; i++){
				
				if(name.equals(ItemCatogery[i])){
					System.out.printf("|     %-40s :  ","Enter the NEW Catogery Name ");
					String newName = input.next();
					// if has Itemdetails it should be update//
					for (int j = 0; j < ItemDetails.length; j++){
						if(ItemDetails[j][2].equals(ItemCatogery[i])){ ItemDetails[j][2]=newName; }
					}
					ItemCatogery[i] = newName;
					System.out.printf("|     ******* Category Name Updated *******************|             |%n");
					System.out.printf("|--------------------------------------------------------------------|%n");
					System.out.printf("|                                                                    |%n");
					System.out.printf("|     %-40s :  ","Do You Need Update More - ");
					char x = input.next().charAt(0);
					if( x == 'y'){ clearConsole();  CreateFrameOnItemCategorySlide(" UPDATE ITEM CATEGORY"); continue L1;}			
					else{ clearConsole(); ManageItemCatogery(); break L1; }	
				}
				if(i == ItemCatogery.length - 1){
					System.out.printf("|           Cant Find this Category Name Please Try Again            |%n");
					System.out.printf("|                                                                    |%n");
				}
			}
		}	
	}
	// Item Add page
	public static void AddItem(){
		
L1:		while(true){
			System.out.print("----------------------------------------------------------------------\n");
			System.out.print("|                               ADD ITEM                             |\n");
			System.out.print("----------------------------------------------------------------------\n");
			System.out.printf("|     %-40s :  ","Enter the Item Code");
			String c = input.next();						
			// need to Check Item Code Duplication// 
			for (int i = 0; i < ItemCode.length ; i++){
				if(c.equals(ItemCode[i])){clearConsole(); System.out.printf("|               Duplicate Item code!! Please Try again               |%n"); continue L1;}
			}
			ItemCode = growc(ItemCode);
			ItemCode[ItemCode.length - 1] = c;
			
			ItemDetails = growItemDetails();
			
			for (int i = (ItemDetails.length - 1); i < ItemDetails.length; i++){
				for (int j = 0; j < ItemDetails[i].length; j++){
					if(j == 0){ItemDetails[i][j] = c;}
					
					if(j == 1){
						System.out.printf("|                                                                    |%n");
						System.out.printf("|     Suppliers List                                                 |%n");
						System.out.printf("|     -------------------------------------------                    |%n");
						System.out.printf("|     | %-10s | %-10s| %-15s|                    |%n","  SUP No","  SUP ID","   SUP NAME");
						System.out.printf("|     -------------------------------------------                    |%n");	
						for (int k = 0; k < supName.length; k++){
							for (int l = 0; l < supName[k].length ; l++){
								System.out.printf("|     | %-10d | %-10s| %-15s|                    |%n",(k+1),supId[k],supName[k][l]);
								System.out.printf("|     -------------------------------------------                    |%n");	
							}
							
						}
						System.out.printf("|                                                                    |%n");
						System.out.printf("|                                                                    |%n");	
L2:						while(true){
							System.out.printf("|     %-40s :  ","Enter the Supplier Number");
							int Snum = input.nextInt();
							if(Snum > supId.length || Snum < 1){System.out.printf("|     Invalid Number Please try again                                |%n"); continue L2;}
							else{
								ItemDetails[i][j] = supId[Snum-1]; break L2; 
							}							 
						}
					}
					
					if( j == 2){
						System.out.printf("|                                                                    |%n");
						System.out.printf("|     Item Categories List                                           |%n");
						System.out.printf("|     ---------------------------------                              |%n");
						System.out.printf("|     | %-10s| %-15s|                                 |%n","  CAT No","CATEGORY NAME");
						System.out.printf("|     ---------------------------------                              |%n");	
						for (int m = 0; m < ItemCatogery.length; m++){  
							System.out.printf("|     | %-10d| %-15s|                                 |%n",(m+1),ItemCatogery[m]);
							System.out.printf("|     ---------------------------------                              |%n");	
								
						}
						System.out.printf("|                                                                    |%n");
						System.out.printf("|                                                                    |%n");	
L3:						while(true){
							System.out.printf("|     %-40s :  ","Enter the Category Number");
							int Cnum = input.nextInt();
							if(Cnum > ItemCatogery.length || Cnum < 1){System.out.printf("|     Invalid Number Please try again                                |%n"); continue L3;}
							else{
								ItemDetails[i][j] = ItemCatogery[Cnum-1]; break L3; 
							}							 
						}	
					}
					if( j == 3){
						System.out.printf("|                                                                    |%n");
						System.out.printf("|     %-40s :  ","Enter the Decription");
						
						String des = input.next();
						Decription = growc(Decription);
						
						Decription[Decription.length - 1] = des;
						ItemDetails[i][j] = Decription[Decription.length - 1];
						System.out.printf("|                                                                    |%n");
						
					}	
					if(j == 4){
						System.out.printf("|                                                                    |%n");
						System.out.printf("|     %-40s :  ","Enter the Unit Price");
						
						double up = input.nextDouble();
						UnitPrice = growUp(UnitPrice);
						
						UnitPrice[UnitPrice.length - 1] = up; 
						String p = String.valueOf(UnitPrice[UnitPrice.length - 1]);  // convert double to String
						
						ItemDetails[i][j] = p;
						System.out.printf("|                                                                    |%n");
							
					}
					if( j == 5){
						System.out.printf("|                                                                    |%n");
						System.out.printf("|     %-40s :  ","Enter the Qty on Hand");
						
						String Qty = input.next();
						QtyOnHand = growc(QtyOnHand);
						
						QtyOnHand[QtyOnHand.length - 1] = Qty; 
						ItemDetails[i][j] =	QtyOnHand[QtyOnHand.length - 1];
						System.out.printf("|                                                                    |%n");
						
					}	
				}
				System.out.printf("|     %-40s :  ","Do You Need Add another Item");
				char x = input.next().charAt(0);
				if(x == 'y'){clearConsole(); continue L1;} else {clearConsole(); StockManage(); break L1;}
				
			}		
		}
	}
	// To grow ItemDetails [][] Array
	public static String[][] growItemDetails(){
		String temp[][] = new String[ItemDetails.length+1][6];
		
		for (int i = 0; i < ItemDetails.length; i++){	
			for (int j = 0; j < ItemDetails[i].length; j++){
				temp[i][j] = ItemDetails[i][j] ;
			}		
		}
		
		ItemDetails = temp;
		return temp;	
	}	
	// Grow for Decription[] and QtyOnHand[]
	public static String [] growc(String [] ar){
		String[] temp = new String [ar.length+1];
		for (int i = 0; i < ar.length; i++){
			temp[i] = ar[i];
		}
		ar = temp;
		return ar;
	
	}
	//To Grow UnitPrice[] 
	public static double[] growUp(double[] ar){
		
		double[] temp = new double[ar.length+1];
		for (int i = 0; i < ar.length; i++){
			temp[i] = ar[i];
		}
		ar = temp;
		return ar;
		
	}
	public static void GetItemSuppliersWise(){   // Create Get Item for Suppliers Wise Page
		
L1:		while(true){
			System.out.print("----------------------------------------------------------------------------\n");
			System.out.print("|                           GET ITEM SUPPLIER WISE                         |\n");
			System.out.print("----------------------------------------------------------------------------\n");
			System.out.printf("|                                                                          |%n");
			System.out.printf("|                                                                          |%n");
			System.out.printf("|  %-35s :  ","Enter the Suuplier ID");
			String id = input.next();
			
			for (int i = 0; i < supId.length; i++){
				if(id.equals(supId[i])){
					System.out.printf("|  %-35s : %-10s                        |%n","Suppler Name is",supName[i][0]);
					System.out.printf("|                                                                          |%n");
					System.out.printf("|                                                                          |%n");
					System.out.print("----------------------------------------------------------------------------\n");
					System.out.printf("| %-12s | %-12s | %-12s | %-12s | %-12s |%n","Item Code","DESCRIPTION","Unit Price","Qty on Hand","CATEGORY");
					System.out.print("----------------------------------------------------------------------------\n");
					boolean f = false; 
					for (int j = 0; j < ItemDetails.length; j++){
						if(ItemDetails[j][1].equals(id)){
							f = true;
							System.out.printf("| %-12s | %-12s | %-12s | %-12s | %-12s |%n",ItemDetails[j][0],ItemDetails[j][3],ItemDetails[j][4],ItemDetails[j][5],ItemDetails[j][2]);		
							System.out.print("----------------------------------------------------------------------------\n");
						}
						if(j == (ItemDetails.length-1) ){
							if (f== false){
								System.out.printf("|                                                                          |%n");
								System.out.printf("|                                                                          |%n");
								System.out.print("----------------------------------------------------------------------------\n");
							}
						}
					
					}	
					System.out.printf("|  %-35s :  ","Do you need Search more");	
					char x = input.next().charAt(0);
					if(x == 'y' || x == 'Y'){clearConsole(); continue L1;} else {clearConsole(); StockManage(); break L1;}
				}
				if(i == supId.length - 1){
					clearConsole();
					System.out.printf("|              Cant Find Supplier ID!!!     Please Try Again               |%n");
					System.out.printf("|                                                                          |%n");
				}	
			}			
		}
	}
	// Create View Items page
	public static void ViewItems(){
		System.out.print("------------------------------------------------------------------------------\n");
		System.out.print("|                                 VIEW ITEMS                                 |\n");
		System.out.print("------------------------------------------------------------------------------\n");
		System.out.printf("|                                                                            |%n");
		System.out.printf("|                                                                            |%n");
		for (int i = 0; i < ItemCatogery.length; i++){
			System.out.printf("| %-15S                                                            |%n",ItemCatogery[i]);
			System.out.print("==============================================================================\n");
			System.out.printf("| %-10s | %-10s | %-14s | %-14s | %-14s |%n","SupID","Item Code","Description","Price","Qty");
			System.out.print("==============================================================================\n");		
			for (int j = 0; j < ItemDetails.length; j++){
				
				if(ItemCatogery[i].equals(ItemDetails[j][2])){ 
					
					System.out.printf("| %-10s | %-10s | %-14s | %-14s | %-14s |%n",ItemDetails[j][1],ItemDetails[j][0],ItemDetails[j][3],ItemDetails[j][4],ItemDetails[j][5]);		
					System.out.print("------------------------------------------------------------------------------\n");	
				}	
			}	
			System.out.printf("|                                                                            |%n");
			System.out.printf("|                                                                            |%n");
		}	
L1:		while(true){
			System.out.printf("|                                                                            |%n");
			System.out.printf("|     Go to Previous page (Press y)  : ");
			char x = input.next().charAt(0);
			if(x == 'y' || x == 'Y'){clearConsole(); StockManage(); break L1;}else{continue L1;}
		}
		
	} 
	public static void RankItemsPerUnitPrice(){
		// Firstly Itemdetails [][] values assign to tempory array  
		String temp1[][] =  new String[ItemDetails.length][6];
		for (int i = 0; i < temp1.length ; i++){
			for (int j = 0; j < temp1[i].length; j++){
				temp1[i][j] = ItemDetails[i][j];
			}	
		}
		// Secondly Sort the tempory Array on base by Unit Price // 
		for (int i = 0; i < temp1.length-1; i++){
			for (int j = 0; j < temp1.length-1; j++){
				if(Double.parseDouble(temp1[j][4]) > Double.parseDouble(temp1[j+1][4])){ // Get String to Double // 
					for (int k = 0; k < temp1[j].length; k++){
						String d = temp1[j][k]; 
						temp1[j][k] = temp1[j+1][k];
						temp1[j+1][k] = d;
					}
				}
			}
		}
		System.out.print("----------------------------------------------------------------------------------------------\n");
		System.out.print("|                                 RANK ITEMS Per UNIT PRICE                                  |\n");
		System.out.print("----------------------------------------------------------------------------------------------\n");
		System.out.printf("|                                                                                            |%n");
		System.out.printf("|                                                                                            |%n");
		System.out.print("==============================================================================================\n");
		System.out.printf("| %-10s | %-10s | %-14s | %-14s | %-14s |%-14s |%n","SupID","Item Code","Description","Price","Qty","CAT");
		System.out.print("==============================================================================================\n");
			
		for (int i = 0; i < temp1.length; i++){
				System.out.printf("| %-10s | %-10s | %-14s | %-14s | %-14s |%-14s |%n",temp1[i][1],temp1[i][0],temp1[i][3],temp1[i][4],temp1[i][5],temp1[i][2]);
		}
		System.out.print("----------------------------------------------------------------------------------------------\n");
L1:		while(true){
			System.out.printf("|                                                                                            |%n");
			System.out.printf("|     Go to Previous page (Press y)  : ");
			char x = input.next().charAt(0);
			if(x == 'y' ||x == 'Y'){clearConsole(); StockManage(); break L1;}else{continue L1;}      	
		}	
	}
	// Clear consloe Method// 
	private final static void clearConsole() {
		final String os = System.getProperty("os.name");
		try {
			if (os.equals("Linux")) {
			System.out.print("\033\143");
		} else if (os.equals("Windows")) {
			new ProcessBuilder("cmd", "/c", "cls").inheritIO().start().waitFor();
		} else {
			System.out.print("\033[H\033[2J");
			System.out.flush();
		}
		} catch (final Exception e) {
		//handle the exception
		System.err.println(e.getMessage());
		}
	}
}






