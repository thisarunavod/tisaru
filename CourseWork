				char x = input.next().charAt(0);	
				if( x == 'y'){ clearConsole(); AddSupliers();}else{clearConsole(); StockManage();}	
				}
					
			}else{
				clearConsole();
				System.out.print("----------------------------------------------------------------------\n");
				System.out.print("|                        GET ITEM SUPPLIER WISE                      |\n");
				System.out.print("----------------------------------------------------------------------\n");
