				char x = input.next().charAt(0);	
				if( x == 'y'){ clearConsole(); AddNewItemCategory();}else{clearConsole(); ManageItemCatogery();}
			}
		}
		if(answer == 3){
			if(flag2){
				if(flag){clearConsole(); GetItemSuppliersWise();}
				else{
				clearConsole();
				System.out.print("----------------------------------------------------------------------\n");
				System.out.print("|                        GET ITEM SUPPLIER WISE                      |\n");
