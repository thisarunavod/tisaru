			}
		}
		if(answer == 3){
			clearConsole();
			System.out.print("----------------------------------------------------------------------\n");
			System.out.print("|                        GET ITEM SUPPLIER WISE                      |\n");
			System.out.print("----------------------------------------------------------------------\n");
