			}	
		}
	}
	
	public static void DeleteSuppliers(){
		
		System.out.print("----------------------------------------------------------------------\n");
		System.out.print("|                          DELETE SUPPLIERS                          |\n");
		System.out.print("----------------------------------------------------------------------\n");
		System.out.printf("|                                                                    |%n");
		System.out.printf("|                                                                    |%n");
				
L1:		while(true){
			
			System.out.printf("|     Enter the Supplier ID         :       ");
			String id = input.next();
			
			for (int i = 0; i < supId.length; i++){
//////////////////////////////////////////////////////////////				
				
				for (int k = 0; k < ItemDetails.length; k++){
					for (int l = 0; l < ItemDetails[k].length; l++){
						System.out.print(ItemDetails[k][l]+" ,");
					}
					System.out.println();
				}
				
				if(id.equals(supId[i])){
					RemoveIdandName(i,supId[i]);
					for (int k = 0; k < ItemDetails.length; k++){
						for (int l = 0; l < ItemDetails[k].length; l++){
							System.out.print(ItemDetails[k][l]+" ,");
						}
						System.out.println();
					}
				
					// deleted Successfully
					
L2:					while(true){
						System.out.printf("|     Do You need DELETE More       :        ");
						char x;
						x = input.next().charAt(0);
						if(x == 'y'){ continue L1;}
						else{
							System.out.printf("|     Do you Need go to PREVOIUS PAGE :        ");
							x = input.next().charAt(0);
							if(x == 'y'){ 
								clearConsole();
								SupplierManage(); return;
							}else{System.out.printf("|                                                                    |%n"); continue L2;}			
						}
					}
				}
				if(i == supId.length-1){ System.out.printf("|           Invalid ID  !!!  Enter the Valid ID                      |%n"); }
			}		
		}
	}
	
	public static void RemoveIdandName(int index, String id){
		
		String[] temp = new String[supId.length-1];
		for (int i = 0; i < temp.length; i++){
			if( i >= index ){ temp[i] = supId[i+1];}
			else{ temp[i] = supId[i]; }
		}
		
		String[][] temp2 = new String[supName.length-1][1];
		for (int i = 0; i < temp2.length; i++){
			for (int j = 0; j < temp2[i].length; j++){
				if(i >= index){temp2[i][j] = supName[i+1][j];}
				else{temp2[i][j] = supName[i][j];}
			}
		}
		supId = temp;
		supName = temp2;
		///////////////////////////////////////////////////////////////////////
L1:		for (int i = 0; i < ItemDetails.length; i++){
			if(ItemDetails[i][1].equals(id)){
				ItemDetails = RemoveItemDetails(i);
				if( i == ItemDetails.length-1){break L1;}
				i--;
			} 
		}
		///////////////////////////////////////////////////////////////////////
		System.out.printf("|                                                                    |%n");	
		System.out.printf("|            "+(id)+" Details Deleted Succesfully                        |%n");
		System.out.printf("|--------------------------------------------------------------------|%n");		
		
		if(supId.length == 0){
			flag = false;
			clearConsole();
			System.out.printf("|            ALL  Supplier  Details Deleted Succesfully              |%n");
			System.out.printf("|********************************************************************|%n");	
			SupplierManage();
			return;
		}
	}
	public static String[][] RemoveItemDetails(int index){
		
		String temp[][] = new String [ItemDetails.length - 1][6];	
		
		for (int i = 0; i < temp.length ; i++){
			for (int j = 0; j < temp[i].length; j++){
				if( i >= index){temp[i][j] = ItemDetails[i+1][j];}
				else{temp[i][j] = ItemDetails[i][j];}
			}
		}
		
		ItemDetails = temp ;
		return ItemDetails;  
		
	}
	
	public static void ViewSuppliers(){
		
		System.out.print("----------------------------------------------------------------------\n");
		System.out.print("|                          VIEW SUPPLIERS                            |\n");
		System.out.print("----------------------------------------------------------------------\n");
		
		System.out.printf("|                                                                    |%n");
		System.out.printf("|                                                                    |%n");
		System.out.printf("|     -------------------------------------------                    |%n");
		System.out.printf("|     | %-10s | %-10s| %-15s|                    |%n","  SUP No","  SUP ID","   SUP NAME");
		//System.out.printf("|     | 1 | %-35s |    	             |%n"," TO ADD SUPPLIERS");
		System.out.printf("|     -------------------------------------------                    |%n");	
		for (int i = 0; i < supName.length; i++){
			for (int j = 0; j < supName[i].length ; j++){
				System.out.printf("|     | %-10d | %-10s| %-15s|                    |%n",(i+1),supId[i],supName[i][j]);
				System.out.printf("|     -------------------------------------------                    |%n");	
			}
			
		}
		System.out.printf("|                                                                    |%n");
		System.out.printf("|                                                                    |%n");
L1:		while(true){
			System.out.printf("|     GO to PREVIOUS PAGE (Press y) :        ");
			char x;
			x = input.next().charAt(0);
			if(x == 'y'){ 
				clearConsole();
				SupplierManage();
				break L1;
				 
			}else{ continue L1; }
		} 		
	}
	public static void SearchSuppliers(){
		
		System.out.print("----------------------------------------------------------------------\n");
		System.out.print("|                          SEARCH SUPPLIERS                          |\n");
		System.out.print("----------------------------------------------------------------------\n");
		System.out.printf("|                                                                    |%n");
		System.out.printf("|                                                                    |%n");	
		
L1:		while(true){
		
			System.out.printf("|     Enter the Supplier ID         :       ");
			String id = input.next();
			
			for (int i = 0; i < supName.length; i++){
			
				for (int j = 0; j < supName[i].length; j++){
					
					if(id.equals(supId[i])){
						System.out.printf("|     -------------------------------------------                    |%n");
						System.out.printf("|     | %-10d | %-10s| %-15s|                    |%n",(i+1),supId[i],supName[i][j]);
						System.out.printf("|     -------------------------------------------                    |%n");
						
L2:						while(true){
							System.out.printf("|                                                                    |%n");
							System.out.printf("|     Do You need Search More       :        ");
							char x;
							x = input.next().charAt(0);
							System.out.printf("|                                                                    |%n");
							if(x == 'y'){ continue L1;}
							else{
								System.out.printf("|     Do you Need go to PREVOIUS PAGE :        ");
								x = input.next().charAt(0);
								if(x == 'y'){ 
									clearConsole(); SupplierManage(); return;
								}else{System.out.printf("|                                                                    |%n"); continue L2;}
							}	
						}
					}
				}
				if(i == supName.length-1){ System.out.printf("|           Cant Find this ID !!!!   Enter the Valid ID              |%n"); continue L1;}	
			 	
			}
		}
	}
	public static void StockManage(){
		int answer;
		System.out.print("----------------------------------------------------------------------\n");
		System.out.print("|                           STOCK MANAGEMENT                         |\n");
		System.out.print("----------------------------------------------------------------------\n");
		System.out.printf("|                                                                    |%n");
		System.out.printf("|                                                                    |%n");
		System.out.printf("|     -------------------------------------------                    |%n");
		System.out.printf("|     | 1 | %-35s |    	             |%n"," TO MANAGE ITEM CATOGERY");
		System.out.printf("|     -------------------------------------------                    |%n");
		System.out.printf("|     | 2 | %-35s |    	             |%n"," TO ADD ITEM");
		System.out.printf("|     -------------------------------------------                    |%n");
		System.out.printf("|     | 3 | %-35s |    	             |%n"," TO GET ITEM SUPPLIER WISE");
		System.out.printf("|     -------------------------------------------                    |%n");  
		System.out.printf("|     | 4 | %-35s |    	             |%n"," TO VIEW ITEMS");
		System.out.printf("|     -------------------------------------------                    |%n");
		System.out.printf("|     | 5 | %-35s |    	             |%n"," TO RANK ITEMS per UNIT PRICE");	
		System.out.printf("|     -------------------------------------------                    |%n");
		System.out.printf("|     | 6 | %-35s |    	             |%n"," TO HOMEPAGE");	
		System.out.printf("|     -------------------------------------------                    |%n");
		System.out.printf("|                                                                    |%n");
		System.out.printf("|                                                                    |%n");
		
L1:		while(true){
			System.out.printf("|     GO (Please Input Number) : ");
			answer = input.nextInt();
			if(answer > 6 | answer < 0){System.out.printf("|     Invalid Number !!!  Enter the Correct numbers      %n"); continue L1;}
			else{break L1;}
		}
		if(answer == 6){
			clearConsole();
			WelcomePage();
		}	
		if(answer == 1){
			clearConsole();
			ManageItemCatogery();
		}	
		if(answer == 2){
			if(flag2){
				if(flag){clearConsole(); AddItem();}
				else{
				clearConsole();
				System.out.print("----------------------------------------------------------------------\n");
				System.out.print("|                               ADD ITEM                             |\n");
				System.out.print("----------------------------------------------------------------------\n");
				System.out.printf("|********************************************************************|%n");	
				System.out.printf("|           OOPS !  Not Added Suppliers  On this System              |%n");
				System.out.printf("|********************************************************************|%n");	
				System.out.printf("|     %-40s :  ","Do You Need Add SUPPLIERS - ");
				char x = input.next().charAt(0);	
				if( x == 'y'){ clearConsole(); AddSupliers();}else{clearConsole(); StockManage();}	
				}
					
			}else{
				clearConsole();
				System.out.print("----------------------------------------------------------------------\n");
				System.out.print("|                               ADD ITEM                             |\n");
				System.out.print("----------------------------------------------------------------------\n");
				System.out.printf("|********************************************************************|%n");	
				System.out.printf("|           OOPS !  Not Added Item Category  On this System          |%n");
				System.out.printf("|********************************************************************|%n");	
				System.out.printf("|     %-40s :  ","Do You Need Add Item Category - ");
				char x = input.next().charAt(0);	
				if( x == 'y'){ clearConsole(); AddNewItemCategory();}else{clearConsole(); ManageItemCatogery();}
			}
		}
	} 

	public static void ManageItemCatogery(){
		
		int answer;
		System.out.print("----------------------------------------------------------------------\n");
		System.out.print("|                        ITEM CATEGORY MANAGEMENT                    |\n");
		System.out.print("----------------------------------------------------------------------\n");
		System.out.printf("|                                                                    |%n");
		System.out.printf("|                                                                    |%n");
		System.out.printf("|     -------------------------------------------                    |%n");
		System.out.printf("|     | 1 | %-35s |    	             |%n"," TO Add NEW ITEM CATEGORY");
		System.out.printf("|     -------------------------------------------                    |%n");
		System.out.printf("|     | 2 | %-35s |    	             |%n"," TO DELETE ITEM CATEGORY");
		System.out.printf("|     -------------------------------------------                    |%n");
		System.out.printf("|     | 3 | %-35s |    	             |%n"," TO UPDATE ITEM CATEGORY");
		System.out.printf("|     -------------------------------------------                    |%n");  
		System.out.printf("|     | 4 | %-35s |    	             |%n"," TO Previous PAGE");
		System.out.printf("|     -------------------------------------------                    |%n");
		System.out.printf("|                                                                    |%n");
		System.out.printf("|                                                                    |%n");
		
L1:		while(true){
			System.out.printf("|     GO (Please Input Number) : ");
			answer = input.nextInt();
			if(answer > 4 | answer < 0){System.out.printf("|     Invalid Number !!!  Enter the Correct numbers      %n"); continue L1;}
			else{break L1;}
		}
		if(answer == 4){ clearConsole(); StockManage();}
		if(answer == 1){ clearConsole(); AddNewItemCategory();}
		if(answer == 2){
			if(flag2){  clearConsole();	DeleteItemCategory();}
			else{
				clearConsole();
				System.out.print("----------------------------------------------------------------------\n");
				System.out.print("|                        DELETE ITEM CATOGERY                        |\n");
				System.out.print("----------------------------------------------------------------------\n");
				System.out.printf("|   You Did Not ADD Item Category Name . Please Add Firstly          |%n");
				System.out.printf("|********************************************************************|%n");	
				System.out.printf("|     %-40s :  ","Do You Need Add Item Categorey - ");
				char x = input.next().charAt(0);
				if(x == 'y'){clearConsole(); AddNewItemCategory(); }
				else{clearConsole(); ManageItemCatogery();}
				}
			
		}
		if(answer == 3){	
			if(flag2){  clearConsole();	UpdateItemCategory();}
			else{
				clearConsole();
				System.out.print("----------------------------------------------------------------------\n");
				System.out.print("|                        UPDATE ITEM CATOGERY                        |\n");
				System.out.print("----------------------------------------------------------------------\n");
				System.out.printf("|   You Did Not ADD Item Category Name . Please Add Firstly          |%n");
				System.out.printf("|********************************************************************|%n");	
				System.out.printf("|     %-40s :  ","Do You Need Add Item Categorey - ");
				char x = input.next().charAt(0);
				if(x == 'y'){clearConsole(); AddNewItemCategory(); }
				else{clearConsole(); ManageItemCatogery(); }
				}	
			}
		
	}
	
	public static void AddNewItemCategory(){
		
		System.out.print("----------------------------------------------------------------------\n");
		System.out.print("|                        Add NEW ITEM CATEGORY                       |\n");
		System.out.print("----------------------------------------------------------------------\n");
		System.out.printf("|                                                                    |%n");
		System.out.printf("|                                                                    |%n");
		
L1:		while(true){
			
			System.out.printf("|     Enter the new Catogery Name : ");
			String name = input.next();
			flag2 = true;
			ItemCatogery = growIC();
			ItemCatogery[ItemCatogery.length - 1] = name;
			System.out.printf("|*****Item Category Name Entered Successfully*********|%n");		
			System.out.printf("|--------------------------------------------------------------------|%n");
			System.out.printf("|                                                                    |%n");

L2:			while(true){
				System.out.printf("|     Do You Need Add more Category : ");
				char x = input.next().charAt(0);
				if(x == 'y'){continue L1;}
				else{
					System.out.printf("|     Do You Need Go To PREVIOUS PAGE : ");
					x = input.next().charAt(0);
					if(x == 'y'){clearConsole(); ManageItemCatogery(); break L1;}
					else{continue L2;}
				}	
			}
		}			
	}
	public static String[] growIC(){
		String [] temp = new  String[ItemCatogery.length+1];
		
		for (int i = 0; i < ItemCatogery.length; i++){
			temp[i] = ItemCatogery[i];
		}
		
		ItemCatogery = temp;
		return ItemCatogery; 
		
	}
	public static void DeleteItemCategory(){
		
		System.out.print("----------------------------------------------------------------------\n");
		System.out.print("|                        DELETE ITEM CATOGERY                        |\n");
		System.out.print("----------------------------------------------------------------------\n");
		System.out.printf("|                                                                    |%n");
		System.out.printf("|                                                                    |%n");
L1:		while(true){	
			System.out.printf("|     Enter the Catogery Name (for Delete) :  ");
			String name = input.next();
			for (int i = 0; i < ItemCatogery.length ; i++){
				if(name.equals(ItemCatogery[i])){
					RemoveItemcatogery(i);
				
L2:					while(true){
						System.out.printf("|     Do You need DELETE More       :        ");
						char x;
						x = input.next().charAt(0);
						if(x == 'y'){ continue L1;}
						else{
							System.out.printf("|     Do you Need go to PREVOIUS PAGE :        ");
							x = input.next().charAt(0);
							if(x == 'y'){ clearConsole(); ManageItemCatogery(); return;}
							else{System.out.printf("|                                                                    |%n"); continue L2;}			
						}	
					}
				}
				if( i == ItemCatogery.length-1){
					System.out.printf("|           Cant Find this Category Name Please Try Again            |%n");
					System.out.printf("|                                                                    |%n");	
				}
			} 	
		}	
	}	
	public static void RemoveItemcatogery(int index){
		
		String[] temp = new String [ItemCatogery.length - 1];
		for (int i = 0; i < temp.length; i++){
			if(i >= index){ temp[i] = ItemCatogery[i+1];}
			else{temp[i] = ItemCatogery[i];}
		}
		ItemCatogery = temp;
		
		if(ItemCatogery.length == 0){
			flag2 = false;
			clearConsole();
			System.out.printf("|     ALL  Item Catogery Name Deleted. Please Add Item Catogery      |%n");
			System.out.printf("|********************************************************************|%n");	
			ManageItemCatogery();	
		}
		
		 
	}
	
	public static void UpdateItemCategory(){
		System.out.print("----------------------------------------------------------------------\n");
		System.out.print("|                        UPDATE ITEM CATOGERY                        |\n");
		System.out.print("----------------------------------------------------------------------\n");

L1:		while(true){	
			System.out.printf("|     %-40s :  ","Enter the Catogery Name (for Update)");
			String name = input.next();
			System.out.printf("|                                                                    |%n");
			
			for (int i = 0; i < ItemCatogery.length; i++){
				
				if(name.equals(ItemCatogery[i])){
					System.out.printf("|     %-40s :  ","Enter the NEW Catogery Name ");
					String newName = input.next();
					ItemCatogery[i] = newName;
					System.out.printf("|     ******* Category Name Updated *******************|             |%n");
					System.out.printf("|--------------------------------------------------------------------|%n");
					System.out.printf("|                                                                    |%n");
					
L2:					while(true){
						System.out.printf("|     %-40s :  ","Do You Need Update More - ");
						char x = input.next().charAt(0);
						if( x == 'y'){continue L1;}			
						else{
							System.out.printf("|     %-40s :  ","Do You Need Go PREVOIUS PAGE ");
							x = input.next().charAt(0);
							if( x == 'y'){ clearConsole(); ManageItemCatogery(); return; }
							else{System.out.printf("|                                                                    |%n"); continue L2;}						
						}
					}
				}
				if(i == ItemCatogery.length - 1){
					System.out.printf("|           Cant Find this Category Name Please Try Again            |%n");
					System.out.printf("|                                                                    |%n");
				}
			}
		}	
	}

	public static void AddItem(){
		
L1:		while(true){
			System.out.print("----------------------------------------------------------------------\n");
			System.out.print("|                               ADD ITEM                             |\n");
			System.out.print("----------------------------------------------------------------------\n");
			System.out.printf("|     %-40s :  ","Enter the Item Code");
			String c = input.next();						
			// need to Check Item Code Duplication// 
			for (int i = 0; i < ItemCode.length ; i++){
				if(c.equals(ItemCode[i])){clearConsole(); System.out.printf("|               Duplicate Item code!! Please Try again               |%n"); continue L1;}
			}
			ItemCode = growc(ItemCode);
			ItemCode[ItemCode.length - 1] = c;
			
			ItemDetails = growItemDetails();
			
			for (int i = (ItemDetails.length - 1); i < ItemDetails.length; i++){
				for (int j = 0; j < ItemDetails[i].length; j++){
					if(j == 0){ItemDetails[i][j] = c;}
					
					if(j == 1){
						System.out.printf("|     Suppliers List                                                 |%n");
						System.out.printf("|     -------------------------------------------                    |%n");
						System.out.printf("|     | %-10s | %-10s| %-15s|                    |%n","  SUP No","  SUP ID","   SUP NAME");
						System.out.printf("|     -------------------------------------------                    |%n");	
						for (int k = 0; k < supName.length; k++){
							for (int l = 0; l < supName[k].length ; l++){
								System.out.printf("|     | %-10d | %-10s| %-15s|                    |%n",(k+1),supId[k],supName[k][l]);
								System.out.printf("|     -------------------------------------------                    |%n");	
							}
							
						}
						System.out.printf("|                                                                    |%n");
						System.out.printf("|                                                                    |%n");	
L2:						while(true){
							System.out.printf("|     %-40s :  ","Enter the Supplier Number");
							int Snum = input.nextInt();
							if(Snum > supId.length || Snum < 1){System.out.printf("|     Invalid Number Please try again                                |%n"); continue L2;}
							else{
								ItemDetails[i][j] = supId[Snum-1]; break L2; 
							}							 
						}
					}
					
					if( j == 2){
						System.out.printf("|     Item Categories List                                           |%n");
						System.out.printf("|     ---------------------------------                              |%n");
						System.out.printf("|     | %-10s| %-15s|                                  |%n","  CAT No","CATEGORY NAME");
						System.out.printf("|     ---------------------------------                              |%n");	
						for (int m = 0; m < ItemCatogery.length; m++){  
							System.out.printf("|     | %-10d| %-15s|                                 |%n",(m+1),ItemCatogery[m]);
							System.out.printf("|     ---------------------------------                              |%n");	
								
						}
						System.out.printf("|                                                                    |%n");
						System.out.printf("|                                                                    |%n");	
L3:						while(true){
							System.out.printf("|     %-40s :  ","Enter the Category Number");
							int Cnum = input.nextInt();
							if(Cnum > ItemCatogery.length || Cnum < 1){System.out.printf("|     Invalid Number Please try again                                |%n"); continue L3;}
							else{
								ItemDetails[i][j] = ItemCatogery[Cnum-1]; break L3; 
							}							 
						}	
					}
					if( j == 3){
						System.out.printf("|                                                                    |%n");
						System.out.printf("|     %-40s :  ","Enter the Decription");
						
						String des = input.next();
						Decription = growc(Decription);
						
						Decription[Decription.length - 1] = des;
						ItemDetails[i][j] = Decription[Decription.length - 1];
						System.out.printf("|                                                                    |%n");
						
					}	
					if(j == 4){
						System.out.printf("|                                                                    |%n");
						System.out.printf("|     %-40s :  ","Enter the Unit Price");
						
						String up = input.next();
						UnitPrice = growc(UnitPrice);
						
						UnitPrice[UnitPrice.length - 1] = up; 
						ItemDetails[i][j] = UnitPrice[UnitPrice.length - 1];
						System.out.printf("|                                                                    |%n");
							
					}
					if( j == 5){
						System.out.printf("|                                                                    |%n");
						System.out.printf("|     %-40s :  ","Enter the Qty on Hand");
						
						String Qty = input.next();
						QtyOnHand = growc(QtyOnHand);
						
						QtyOnHand[QtyOnHand.length - 1] = Qty; 
						ItemDetails[i][j] =	QtyOnHand[QtyOnHand.length - 1];
						System.out.printf("|                                                                    |%n");
						
					}	
				}
				System.out.printf("|     %-40s :  ","Do You Need Add another Item");
				char x = input.next().charAt(0);
				if(x == 'y'){clearConsole(); continue L1;} else {clearConsole(); StockManage(); break L1;}
				
			}		
		}
	}
	public static String[][] growItemDetails(){
		
		String temp[][] = new String[ItemDetails.length+1][6];
		
		for (int i = 0; i < ItemDetails.length; i++){	
			for (int j = 0; j < ItemDetails[i].length; j++){
				temp[i][j] = ItemDetails[i][j] ;
			}		
		}
		
		ItemDetails = temp;
		return temp;	
	}	
	public static String [] growc(String [] ar){
		
		String[] temp = new String [ar.length+1];
		for (int i = 0; i < ar.length; i++){
			temp[i] = ar[i];
		}
		ar = temp;
		return ar;
	
	}
}

2023 / jun / 31
-------------------------------------------------
import java.util.*;
class Main {
	public static Scanner input =new Scanner(System.in);
	public static Random r =new Random();
	public static String uN = "1";
	public static String pW = "1";
	public static boolean flag = false;
	public static boolean flag2 = false;
	public static String [] supId ={};
	public static String [][] supName = new String[0][1];
	public static String [] ItemCatogery = {}; 
	public static String [][] ItemDetails = new String [0][6];
	public static String[] ItemCode = {};
	public static String[] Decription = {};
	public static double[] UnitPrice = {};
	public static String[] QtyOnHand = {};
	private final static void clearConsole() {
		final String os = System.getProperty("os.name");
		try {
			if (os.equals("Linux")) {
			System.out.print("\033\143");
		} else if (os.equals("Windows")) {
			new ProcessBuilder("cmd", "/c", "cls").inheritIO().start().waitFor();
		} else {
			System.out.print("\033[H\033[2J");
			System.out.flush();
		}
		} catch (final Exception e) {
		//handle the exception
		System.err.println(e.getMessage());
		}
	}
									
	public static void main(String args[]) {
					
		LogingPage();
		
	}
	public static void LogingPage(){
		
		System.out.print("----------------------------------------------------------------------\n");
		System.out.print("|                   LOGGING TO  GOODS STOCK SYSTEM                   |\n");
		System.out.print("----------------------------------------------------------------------\n");
		for (int i = 0; i < 3 ; i++){
			System.out.print("|                                                                    |\n");
		}
		
		System.out.printf("|                %-15s:","USERNAME");    
L1:		while(true){
			String usernName = input.next();
			if(usernName.equals(uN)){break L1;}
			else{
				System.out.printf("%n|                %-15s                 |","Invalid Username!! Please try Again");
				System.out.printf("%n|                %-15s:","        ");continue L1;
			}
		}
		System.out.printf("|                %-15s:","PASSWORD");
L2:		while(true){
			String Password = input.next();
			if(Password.equals(pW)){System.out.printf("%n|                      %-15s%n%n%n%n%n%n%n%n%n%n%n%n","LOGING SUCCESFULL");clearConsole(); WelcomePage();break L2;}
			else{
				System.out.printf("%n|                %-15s                 |","Invalid Password!! Please try Again");
				System.out.printf("%n|                %-15s:","        ");continue L2;
			}
		}
	}
	
	public static void WelcomePage(){
		
		int answer;
		System.out.print("----------------------------------------------------------------------\n");
		System.out.print("|              WELCOME TO NAVOD STOCK MANAGEMENT SYSTEM              |\n");
		System.out.print("----------------------------------------------------------------------\n");
		System.out.printf("|                                                                    |%n");
		System.out.printf("|                                                                    |%n");
		System.out.printf("|     -------------------------------------------                    |%n");
		System.out.printf("|     | 1 | %-35s |    	             |%n"," TO CHANGE CREDENTIALS");
		System.out.printf("|     -------------------------------------------                    |%n");
		System.out.printf("|     | 2 | %-35s |    	             |%n"," TO SUPLIER MANAGE");
		System.out.printf("|     -------------------------------------------                    |%n");
		System.out.printf("|     | 3 | %-35s |    	             |%n"," TO STOCK MANAGE");
		System.out.printf("|     -------------------------------------------                    |%n");  
		System.out.printf("|     | 4 | %-35s |    	             |%n"," TO LOGOUT");
		System.out.printf("|     -------------------------------------------                    |%n");
		System.out.printf("|     | 5 | %-35s |    	             |%n"," TO EXIT THE SYSTEM");	
		System.out.printf("|     -------------------------------------------                    |%n");
		System.out.printf("|                                                                    |%n");
		System.out.printf("|                                                                    |%n");
		
		
L1:		while(true){
			System.out.printf("|     GO (Please Input Number) : ");
			answer = input.nextInt();
			if(answer > 5 | answer < 0){System.out.printf("|     Invalid Number !!!  Enter the Correct numbers      %n"); continue L1;}
			else{break L1;}
		}	
		if(answer == 4){
			System.out.printf("|                                                                    |%n");
			System.out.printf("|____________________________________________________________________|%n");
			clearConsole();
			LogingPage();
		}
		if(answer == 5){
			System.out.printf("|                                                                    |%n");
			System.out.printf("|____________________________________________________________________|%n");
			ExitSystem();
							
		}	
		if(answer == 1){
			System.out.printf("|                                                                    |%n");
			System.out.printf("|____________________________________________________________________|%n");
			clearConsole();
			ChangeCredentials();
		}
		if(answer == 2){
			System.out.printf("|                                                                    |%n");
			System.out.printf("|____________________________________________________________________|%n");
			clearConsole();
			SupplierManage();
		}
		if(answer == 3){
			System.out.printf("|                                                                    |%n");
			System.out.printf("|____________________________________________________________________|%n");
			clearConsole();
			StockManage();
		}
		
		
		
	}
	public static void ExitSystem(){
		System.out.printf("|                                                                    |%n");
		System.out.printf("|____________________________ GOOD BYE_______________________________|%n");		
		return;
	}
	public static void ChangeCredentials(){
		
		System.out.print("----------------------------------------------------------------------\n");
		System.out.print("|                        CHANGE CREDENTIALS                          |\n");
		System.out.print("----------------------------------------------------------------------\n");
		System.out.printf("|                                                                    |%n");
		System.out.printf("|                                                                    |%n");
		
		String answer1 ;
		String answer2 ;
		
L1:		while(true){
			System.out.printf("| 	Please Enter Your USERNAME         : ");   
			answer1 = input.next();
			if(answer1.equals(uN)){System.out.printf("|                                                                    |%n"); break L1;}
			else{System.out.printf("| 	                 Invalid UserName!!!!                        |%n");}
		}
L2:		while(true){
			System.out.printf("| 	Please Enter Your Current PASSWORD : ");   
			answer2 = input.next();
			if(answer2.equals(pW)){System.out.printf("|                                                                    |%n");
				System.out.printf("| 	Please Enter Your New PASSWORD     : ");   	
				String nP = input.next();
				pW = nP;
				System.out.printf("|                                                                    |%n");
				System.out.printf("|        -------- Password Changed Succesfully -----------           |%n");
				System.out.printf("|                                                                    |%n");
				System.out.printf("|                                                                    |%n");
				System.out.printf("| 	DO YOU NEED TO GO HOMEPAGE(y/n)    : ");
				char x =  input.next().charAt(0);
				if(x == 'y'){clearConsole(); WelcomePage(); break L2;}else{continue L2;}	
			}else{
				System.out.printf("| 	                 Invalid Password!!!!                        |%n");
			}	
		}
	}
	
	public static void SupplierManage(){
		
		int answer;
		System.out.print("----------------------------------------------------------------------\n");
		System.out.print("|                      SUPPLIER MANAGEMENT SYSTEM                    |\n");
		System.out.print("----------------------------------------------------------------------\n");
		System.out.printf("|                                                                    |%n");
		System.out.printf("|                                                                    |%n");
		System.out.printf("|     -------------------------------------------                    |%n");
		System.out.printf("|     | 1 | %-35s |    	             |%n"," TO ADD SUPPLIERS");
		System.out.printf("|     -------------------------------------------                    |%n");
		System.out.printf("|     | 2 | %-35s |    	             |%n"," TO UPDATE SUPLIERS");
		System.out.printf("|     -------------------------------------------                    |%n");
		System.out.printf("|     | 3 | %-35s |    	             |%n"," TO DELETE SUPLIERS");
		System.out.printf("|     -------------------------------------------                    |%n");  
		System.out.printf("|     | 4 | %-35s |    	             |%n"," TO VIEW SUPLIERS");
		System.out.printf("|     -------------------------------------------                    |%n");
		System.out.printf("|     | 5 | %-35s |    	             |%n"," TO SEARCH SUPLIERS");	
		System.out.printf("|     -------------------------------------------                    |%n");
		System.out.printf("|     | 6 | %-35s |    	             |%n"," TO HOMEPAGE");	
		System.out.printf("|     -------------------------------------------                    |%n");
		System.out.printf("|                                                                    |%n");
		System.out.printf("|                                                                    |%n");
		
L1:		while(true){
			System.out.printf("|     GO (Please Input Number) : ");
			answer = input.nextInt();
			if(answer > 6 | answer < 0){System.out.printf("|     Invalid Number !!!  Enter the Correct numbers      %n"); continue L1;}
			else{break L1;}
		}
		if(answer == 6){
			//System.out.printf("|                                                                    |%n");
			//System.out.printf("|____________________________________________________________________|%n");
			clearConsole();
			WelcomePage();
		}
		if(answer == 1){
			clearConsole();
			AddSupliers();
		}		
		if(answer == 2){
			if(flag){
				System.out.printf("|                                                                    |%n");
				System.out.printf("|____________________________________________________________________|%n");
				clearConsole();
				UpdateSuppliers();
			}else{
				System.out.printf("|                                                                    |%n");
				System.out.printf("|	NOT Added Suppliers Details !! Please Add Suppliers Details  |%n");
				System.out.printf("|____________________________________________________________________|%n");
				AddSupliers();
			}
		}
		if(answer == 3){
			if(flag){
				clearConsole();
				DeleteSuppliers();
			}else{
				System.out.printf("|                                                                    |%n");
				System.out.printf("|	NOT Added Suppliers Details !! Please Add Suppliers Details  |%n");
				System.out.printf("|____________________________________________________________________|%n");
				AddSupliers();
			}
		}
		if(answer == 4){
			if(flag){
				System.out.printf("|                                                                    |%n");
				System.out.printf("|____________________________________________________________________|%n");
				clearConsole();
				ViewSuppliers();
			}else{
				System.out.printf("|                                                                    |%n");
				System.out.printf("|	NOT Added Suppliers Details !! Please Add Suppliers Details  |%n");
				System.out.printf("|____________________________________________________________________|%n");
				clearConsole();
				AddSupliers();
			}
		}
		if(answer == 5){
			if(flag){
				clearConsole();
				SearchSuppliers();
			}else{
				System.out.printf("|                                                                    |%n");
				System.out.printf("|	NOT Added Suppliers Details !! Please Add Suppliers Details  |%n");
				System.out.printf("|____________________________________________________________________|%n");
				AddSupliers();
			}
		}	
	}
	public static void AddSupliers(){
		
		System.out.print("----------------------------------------------------------------------\n");
		System.out.print("|                            ADD SUPPLIERS                           |\n");
		System.out.print("----------------------------------------------------------------------\n");
		System.out.printf("|                                                                    |%n");
		System.out.printf("|                                                                    |%n");
		
		AddSuppliersDetails();	
	}
	public static void AddSuppliersDetails(){
		
		char x ;
L1:		while(true){
			System.out.printf("|     Do You Need Add a Supplier : ");
			x = input.next().charAt(0);
			if(x == 'y'){
				String id;
				supId = growSupId();
L2:				while(true){
					flag = true;		
					System.out.printf("|     Enter the Supplier ID         :       ");
					id = input.next();
					
					for (int i = 0; i < supId.length-1; i++){
						if(id.equals(supId[i])){System.out.printf("|      This ID is Already use !! Please Set Uniq ID      %n"); continue L2;} 
					}
					supId[supId.length-1] = id;
					//System.out.println(Arrays.toString(supId));   End Process insert Supplier Id 
					
					System.out.printf("|     Enter the Suppler "+(supId[supId.length-1])+" Name   :       ");
					supName = growSupName();
					supName[supName.length-1][0] = input.next();
					System.out.printf("|                                                                    |%n");
					System.out.printf("|________________________________________________                    |%n");
					System.out.printf("|******Suuplier Details Added Succesfully *******|                   |%n");
					System.out.printf("|--------------------------------------------------------------------|%n");
					System.out.printf("|                                                                    |%n");
					continue L1;	
				}	
			}else{
				System.out.printf("|     Do You Need Go To PREVIOUS PAGE : ");
				x = input.next().charAt(0);
				if(x == 'y'){
					clearConsole();
					SupplierManage(); break L1;
				}else{continue L1;}
			}
		}
	}
	
	public static String[] growSupId(){
		
		String [] temp = new String [supId.length+1];
		for (int i = 0; i < supId.length; i++){
			temp[i] = supId[i];
		}
		
		supId = temp;
		return supId;
	}
	
	public static String[][] growSupName(){
		
		String [][] temp = new String[supName.length+1][1];
		for (int i = 0; i < supName.length; i++){
			for (int j = 0; j < supName[i].length; j++){
				temp[i][j] = supName[i][j];
			}
		}
		supName = temp;
		return supName;
		
	}
	
	public static void UpdateSuppliers(){
		
		/*System.out.println(Arrays.toString(supId));
		for (int i = 0; i < supName.length; i++){
			for (int j = 0; j < supName[i].length; j++){
				System.out.print(supName[i][j]+" ,");
			}
			
		}*/
		
		System.out.print("----------------------------------------------------------------------\n");
		System.out.print("|                            UPDATE SUPPLIERS                        |\n");
		System.out.print("----------------------------------------------------------------------\n");
		System.out.printf("|                                                                    |%n");
		System.out.printf("|                                                                    |%n");
				
L1:		while(true){
			
			System.out.printf("|     Enter the Supplier ID         :       ");
			String id = input.next();
				
			for (int i = 0; i < supId.length; i++){
				
				if(id.equals(supId[i])){
					System.out.printf("|     "+(supId[i])+" Suplier Name is          :       "+(supName[i][0])+"                    |%n");
					System.out.printf("|                                                                    |%n");
					System.out.printf("|     Enter the New Name            :       ");
					String N = input.next();
					supName[i][0] = N ;
					System.out.printf("|     "+(supId[i])+" Suplier New Name is      :       "+(supName[i][0])+"                    |%n");
					System.out.printf("|________________________________________________                    |%n");
					System.out.printf("|******Suplier Details UPDATED SUCCESSFULLY *******|                 |%n");
					System.out.printf("|--------------------------------------------------------------------|%n");
					System.out.printf("|                                                                    |%n");
					char x;
L2:					while(true){
						System.out.printf("|     Do you need UPDATE More       :       ");
						x = input.next().charAt(0);
						System.out.printf("|                                                                    |%n");
						if(x == 'y'){ continue L1 ;}
						else{
							System.out.printf("|     Do You Need Go To PREVIOUS PAGE : ");
							x = input.next().charAt(0);
							if(x == 'y'){clearConsole(); SupplierManage(); break L1;}
							else{continue L2;}
						}
					}
				}
				if(i == supId.length-1){System.out.printf("|           Invalid ID  !!!  Enter the Valid ID                      |%n"); continue L1;}	
			}	
		}
	}
	
	public static void DeleteSuppliers(){
		
		System.out.print("----------------------------------------------------------------------\n");
		System.out.print("|                          DELETE SUPPLIERS                          |\n");
		System.out.print("----------------------------------------------------------------------\n");
		System.out.printf("|                                                                    |%n");
		System.out.printf("|                                                                    |%n");
				
L1:		while(true){
			
			System.out.printf("|     Enter the Supplier ID         :       ");
			String id = input.next();
			
			for (int i = 0; i < supId.length; i++){
//////////////////////////////////////////////////////////////				
				
				for (int k = 0; k < ItemDetails.length; k++){
					for (int l = 0; l < ItemDetails[k].length; l++){
						System.out.print(ItemDetails[k][l]+" ,");
					}
					System.out.println();
				}
				
				if(id.equals(supId[i])){
					RemoveIdandName(i,supId[i]);
					for (int k = 0; k < ItemDetails.length; k++){
						for (int l = 0; l < ItemDetails[k].length; l++){
							System.out.print(ItemDetails[k][l]+" ,");
						}
						System.out.println();
					}
				
					// deleted Successfully
					
L2:					while(true){
						System.out.printf("|     Do You need DELETE More       :        ");
						char x;
						x = input.next().charAt(0);
						if(x == 'y'){ continue L1;}
						else{
							System.out.printf("|     Do you Need go to PREVOIUS PAGE :        ");
							x = input.next().charAt(0);
							if(x == 'y'){ 
								clearConsole();
								SupplierManage(); 
							}else{System.out.printf("|                                                                    |%n"); continue L2;}			
						}
					}
				}
				if(i == supId.length-1){ System.out.printf("|           Invalid ID  !!!  Enter the Valid ID                      |%n"); }
			}		
		}
	}
	
	public static void RemoveIdandName(int index, String id){
		
		String[] temp = new String[supId.length-1];
		for (int i = 0; i < temp.length; i++){
			if( i >= index ){ temp[i] = supId[i+1];}
			else{ temp[i] = supId[i]; }
		}
		
		String[][] temp2 = new String[supName.length-1][1];
		for (int i = 0; i < temp2.length; i++){
			for (int j = 0; j < temp2[i].length; j++){
				if(i >= index){temp2[i][j] = supName[i+1][j];}
				else{temp2[i][j] = supName[i][j];}
			}
		}
		supId = temp;
		supName = temp2;
		///////////////////////////////////////////////////////////////////////
L1:		for (int i = 0; i < ItemDetails.length; i++){
			if(ItemDetails[i][1].equals(id)){
				ItemDetails = RemoveItemDetails(i);
				i--;
			} 
		}
		///////////////////////////////////////////////////////////////////////
		System.out.printf("|                                                                    |%n");	
		System.out.printf("|            "+(id)+" Details Deleted Succesfully                        |%n");
		System.out.printf("|--------------------------------------------------------------------|%n");		
		
		if(supId.length == 0){
			flag = false;
			clearConsole();
			System.out.printf("|            ALL  Supplier  Details Deleted Succesfully              |%n");
			System.out.printf("|********************************************************************|%n");	
			SupplierManage();
			return;
		}
	}
	public static String[][] RemoveItemDetails(int index){
		
		String temp[][] = new String [ItemDetails.length - 1][6];	
		String temp2[] = new String [ItemCode.length-1]; 
		for (int i = 0; i < temp.length ; i++){
			
			if(i >= index){temp2[i] = ItemCode[i+1];}else{temp2[i] = ItemCode[i];}
			for (int j = 0; j < temp[i].length; j++){
				if( i >= index){temp[i][j] = ItemDetails[i+1][j];}
				else{temp[i][j] = ItemDetails[i][j];}
			}
		}
		ItemCode = temp2;
		ItemDetails = temp ;
		return ItemDetails;  
		
	}
	
	public static void ViewSuppliers(){
		
		System.out.print("----------------------------------------------------------------------\n");
		System.out.print("|                          VIEW SUPPLIERS                            |\n");
		System.out.print("----------------------------------------------------------------------\n");
		
		System.out.printf("|                                                                    |%n");
		System.out.printf("|                                                                    |%n");
		System.out.printf("|     -------------------------------------------                    |%n");
		System.out.printf("|     | %-10s | %-10s| %-15s|                    |%n","  SUP No","  SUP ID","   SUP NAME");
		//System.out.printf("|     | 1 | %-35s |    	             |%n"," TO ADD SUPPLIERS");
		System.out.printf("|     -------------------------------------------                    |%n");	
		for (int i = 0; i < supName.length; i++){
			for (int j = 0; j < supName[i].length ; j++){
				System.out.printf("|     | %-10d | %-10s| %-15s|                    |%n",(i+1),supId[i],supName[i][j]);
				System.out.printf("|     -------------------------------------------                    |%n");	
			}
			
		}
		System.out.printf("|                                                                    |%n");
		System.out.printf("|                                                                    |%n");
L1:		while(true){
			System.out.printf("|     GO to PREVIOUS PAGE (Press y) :        ");
			char x;
			x = input.next().charAt(0);
			if(x == 'y'){ 
				clearConsole();
				SupplierManage();
				break L1;
				 
			}else{ continue L1; }
		} 		
	}
	public static void SearchSuppliers(){
		
		System.out.print("----------------------------------------------------------------------\n");
		System.out.print("|                          SEARCH SUPPLIERS                          |\n");
		System.out.print("----------------------------------------------------------------------\n");
		System.out.printf("|                                                                    |%n");
		System.out.printf("|                                                                    |%n");	
		
L1:		while(true){
		
			System.out.printf("|     Enter the Supplier ID         :       ");
			String id = input.next();
			
			for (int i = 0; i < supName.length; i++){
			
				for (int j = 0; j < supName[i].length; j++){
					
					if(id.equals(supId[i])){
						System.out.printf("|     -------------------------------------------                    |%n");
						System.out.printf("|     | %-10d | %-10s| %-15s|                    |%n",(i+1),supId[i],supName[i][j]);
						System.out.printf("|     -------------------------------------------                    |%n");
						
L2:						while(true){
							System.out.printf("|                                                                    |%n");
							System.out.printf("|     Do You need Search More       :        ");
							char x;
							x = input.next().charAt(0);
							System.out.printf("|                                                                    |%n");
							if(x == 'y'){ continue L1;}
							else{
								System.out.printf("|     Do you Need go to PREVOIUS PAGE :        ");
								x = input.next().charAt(0);
								if(x == 'y'){ 
									clearConsole(); SupplierManage(); return;
								}else{System.out.printf("|                                                                    |%n"); continue L2;}
							}	
						}
					}
				}
				if(i == supName.length-1){ System.out.printf("|           Cant Find this ID !!!!   Enter the Valid ID              |%n"); continue L1;}	
			 	
			}
		}
	}
	public static void StockManage(){
		int answer;
		System.out.print("----------------------------------------------------------------------\n");
		System.out.print("|                           STOCK MANAGEMENT                         |\n");
		System.out.print("----------------------------------------------------------------------\n");
		System.out.printf("|                                                                    |%n");
		System.out.printf("|                                                                    |%n");
		System.out.printf("|     -------------------------------------------                    |%n");
		System.out.printf("|     | 1 | %-35s |    	             |%n"," TO MANAGE ITEM CATOGERY");
		System.out.printf("|     -------------------------------------------                    |%n");
		System.out.printf("|     | 2 | %-35s |    	             |%n"," TO ADD ITEM");
		System.out.printf("|     -------------------------------------------                    |%n");
		System.out.printf("|     | 3 | %-35s |    	             |%n"," TO GET ITEM SUPPLIER WISE");
		System.out.printf("|     -------------------------------------------                    |%n");  
		System.out.printf("|     | 4 | %-35s |    	             |%n"," TO VIEW ITEMS");
		System.out.printf("|     -------------------------------------------                    |%n");
		System.out.printf("|     | 5 | %-35s |    	             |%n"," TO RANK ITEMS per UNIT PRICE");	
		System.out.printf("|     -------------------------------------------                    |%n");
		System.out.printf("|     | 6 | %-35s |    	             |%n"," TO HOMEPAGE");	
		System.out.printf("|     -------------------------------------------                    |%n");
		System.out.printf("|                                                                    |%n");
		System.out.printf("|                                                                    |%n");
		
L1:		while(true){
			System.out.printf("|     GO (Please Input Number) : ");
			answer = input.nextInt();
			if(answer > 6 | answer < 0){System.out.printf("|     Invalid Number !!!  Enter the Correct numbers      %n"); continue L1;}
			else{break L1;}
		}
		if(answer == 6){
			clearConsole();
			WelcomePage();
		}	
		if(answer == 1){
			clearConsole();
			ManageItemCatogery();
		}	
		if(answer == 2){
			if(flag2){
				if(flag){clearConsole(); AddItem();}
				else{
				clearConsole();
				System.out.print("----------------------------------------------------------------------\n");
				System.out.print("|                               ADD ITEM                             |\n");
				System.out.print("----------------------------------------------------------------------\n");
				System.out.printf("|********************************************************************|%n");	
				System.out.printf("|           OOPS !  Not Added Suppliers  On this System              |%n");
				System.out.printf("|********************************************************************|%n");	
				System.out.printf("|     %-40s :  ","Do You Need Add SUPPLIERS - ");
				char x = input.next().charAt(0);	
				if( x == 'y'){ clearConsole(); AddSupliers();}else{clearConsole(); StockManage();}	
				}
					
			}else{
				clearConsole();
				System.out.print("----------------------------------------------------------------------\n");
				System.out.print("|                               ADD ITEM                             |\n");
				System.out.print("----------------------------------------------------------------------\n");
				System.out.printf("|********************************************************************|%n");	
				System.out.printf("|           OOPS !  Not Added Item Category  On this System          |%n");
				System.out.printf("|********************************************************************|%n");	
				System.out.printf("|     %-40s :  ","Do You Need Add Item Category - ");
				char x = input.next().charAt(0);	
				if( x == 'y'){ clearConsole(); AddNewItemCategory();}else{clearConsole(); ManageItemCatogery();}
			}
		}
		if(answer == 3){
			if(flag2){
				if(flag){clearConsole(); GetItemSuppliersWise();}
				else{
				clearConsole();
				System.out.print("----------------------------------------------------------------------\n");
				System.out.print("|                        GET ITEM SUPPLIER WISE                      |\n");
				System.out.print("----------------------------------------------------------------------\n");
				System.out.printf("|********************************************************************|%n");	
				System.out.printf("|           OOPS !  Not Added Suppliers  On this System              |%n");
				System.out.printf("|********************************************************************|%n");	
				System.out.printf("|     %-40s :  ","Do You Need Add SUPPLIERS - ");
				char x = input.next().charAt(0);	
				if( x == 'y'){ clearConsole(); AddSupliers();}else{clearConsole(); StockManage();}	
				}
					
			}else{
				clearConsole();
				System.out.print("----------------------------------------------------------------------\n");
				System.out.print("|                        GET ITEM SUPPLIER WISE                      |\n");
				System.out.print("----------------------------------------------------------------------\n");
				System.out.printf("|********************************************************************|%n");	
				System.out.printf("|           OOPS !  Not Added Item Category  On this System          |%n");
				System.out.printf("|********************************************************************|%n");	
				System.out.printf("|     %-40s :  ","Do You Need Add Item Category - ");
				char x = input.next().charAt(0);	
				if( x == 'y'){ clearConsole(); AddNewItemCategory();}else{clearConsole(); ManageItemCatogery();}
			}	
		}
		if(answer == 4){
			if(flag2){
				if(flag){clearConsole(); ViewItems();}
				else{
				clearConsole();
				System.out.print("----------------------------------------------------------------------------\n");
				System.out.print("|                                VIEW ITEMS                                |\n");
				System.out.print("----------------------------------------------------------------------------\n");
				System.out.printf("|**************************************************************************|%n");	
				System.out.printf("|                 OOPS !  Not Added Suppliers  On this System              |%n");
				System.out.printf("|**************************************************************************|%n");	
				System.out.printf("|     %-40s :  ","Do You Need Add SUPPLIERS - ");
				char x = input.next().charAt(0);	
				if( x == 'y'){ clearConsole(); AddSupliers();}else{clearConsole(); StockManage();}	
				}
					
			}else{
				clearConsole();
				System.out.print("----------------------------------------------------------------------------\n");
				System.out.print("|                                VIEW ITEMS                                |\n");
				System.out.print("----------------------------------------------------------------------------\n");
				System.out.printf("|**************************************************************************|%n");	
				System.out.printf("|                 OOPS !  Not Added Suppliers  On this System              |%n");
				System.out.printf("|**************************************************************************|%n");	
				System.out.printf("|     %-40s :  ","Do You Need Add Item Category - ");
				char x = input.next().charAt(0);	
				if( x == 'y'){ clearConsole(); AddNewItemCategory();}else{clearConsole(); ManageItemCatogery();}
			}
		}
				
	} 

	public static void ManageItemCatogery(){
		
		int answer;
		System.out.print("----------------------------------------------------------------------\n");
		System.out.print("|                        ITEM CATEGORY MANAGEMENT                    |\n");
		System.out.print("----------------------------------------------------------------------\n");
		System.out.printf("|                                                                    |%n");
		System.out.printf("|                                                                    |%n");
		System.out.printf("|     -------------------------------------------                    |%n");
		System.out.printf("|     | 1 | %-35s |    	             |%n"," TO Add NEW ITEM CATEGORY");
		System.out.printf("|     -------------------------------------------                    |%n");
		System.out.printf("|     | 2 | %-35s |    	             |%n"," TO DELETE ITEM CATEGORY");
		System.out.printf("|     -------------------------------------------                    |%n");
		System.out.printf("|     | 3 | %-35s |    	             |%n"," TO UPDATE ITEM CATEGORY");
		System.out.printf("|     -------------------------------------------                    |%n");  
		System.out.printf("|     | 4 | %-35s |    	             |%n"," TO Previous PAGE");
		System.out.printf("|     -------------------------------------------                    |%n");
		System.out.printf("|                                                                    |%n");
		System.out.printf("|                                                                    |%n");
		
L1:		while(true){
			System.out.printf("|     GO (Please Input Number) : ");
			answer = input.nextInt();
			if(answer > 4 | answer < 0){System.out.printf("|     Invalid Number !!!  Enter the Correct numbers      %n"); continue L1;}
			else{break L1;}
		}
		if(answer == 4){ clearConsole(); StockManage();}
		if(answer == 1){ clearConsole(); AddNewItemCategory();}
		if(answer == 2){
			if(flag2){  clearConsole();	DeleteItemCategory();}
			else{
				clearConsole();
				System.out.print("----------------------------------------------------------------------\n");
				System.out.print("|                        DELETE ITEM CATOGERY                        |\n");
				System.out.print("----------------------------------------------------------------------\n");
				System.out.printf("|   You Did Not ADD Item Category Name . Please Add Firstly          |%n");
				System.out.printf("|********************************************************************|%n");	
				System.out.printf("|     %-40s :  ","Do You Need Add Item Categorey - ");
				char x = input.next().charAt(0);
				if(x == 'y'){clearConsole(); AddNewItemCategory(); }
				else{clearConsole(); ManageItemCatogery();}
				}
			
		}
		if(answer == 3){	
			if(flag2){  clearConsole();	UpdateItemCategory();}
			else{
				clearConsole();
				System.out.print("----------------------------------------------------------------------\n");
				System.out.print("|                        UPDATE ITEM CATOGERY                        |\n");
				System.out.print("----------------------------------------------------------------------\n");
				System.out.printf("|   You Did Not ADD Item Category Name . Please Add Firstly          |%n");
				System.out.printf("|********************************************************************|%n");	
				System.out.printf("|     %-40s :  ","Do You Need Add Item Categorey - ");
				char x = input.next().charAt(0);
				if(x == 'y'){clearConsole(); AddNewItemCategory(); }
				else{clearConsole(); ManageItemCatogery(); }
				}	
			}
		
	}
	
	public static void AddNewItemCategory(){
		
		System.out.print("----------------------------------------------------------------------\n");
		System.out.print("|                        Add NEW ITEM CATEGORY                       |\n");
		System.out.print("----------------------------------------------------------------------\n");
		System.out.printf("|                                                                    |%n");
		System.out.printf("|                                                                    |%n");
		
L1:		while(true){
			
			System.out.printf("|     Enter the new Catogery Name : ");
			String name = input.next();
			flag2 = true;
			ItemCatogery = growIC();
			ItemCatogery[ItemCatogery.length - 1] = name;
			System.out.printf("|*****Item Category Name Entered Successfully*********|%n");		
			System.out.printf("|--------------------------------------------------------------------|%n");
			System.out.printf("|                                                                    |%n");

L2:			while(true){
				System.out.printf("|     Do You Need Add more Category : ");
				char x = input.next().charAt(0);
				if(x == 'y'){continue L1;}
				else{
					System.out.printf("|     Do You Need Go To PREVIOUS PAGE : ");
					x = input.next().charAt(0);
					if(x == 'y'){clearConsole(); ManageItemCatogery(); break L1;}
					else{continue L2;}
				}	
			}
		}			
	}
	public static String[] growIC(){
		String [] temp = new  String[ItemCatogery.length+1];
		
		for (int i = 0; i < ItemCatogery.length; i++){
			temp[i] = ItemCatogery[i];
		}
		
		ItemCatogery = temp;
		return ItemCatogery; 
		
	}
	public static void DeleteItemCategory(){
		
		System.out.print("----------------------------------------------------------------------\n");
		System.out.print("|                        DELETE ITEM CATOGERY                        |\n");
		System.out.print("----------------------------------------------------------------------\n");
		System.out.printf("|                                                                    |%n");
		System.out.printf("|                                                                    |%n");
L1:		while(true){	
			System.out.printf("|     Enter the Catogery Name (for Delete) :  ");
			String name = input.next();
			for (int i = 0; i < ItemCatogery.length ; i++){
				if(name.equals(ItemCatogery[i])){
					RemoveItemcatogery(i);
				
L2:					while(true){
						System.out.printf("|     Do You need DELETE More       :        ");
						char x;
						x = input.next().charAt(0);
						if(x == 'y'){ continue L1;}
						else{
							System.out.printf("|     Do you Need go to PREVOIUS PAGE :        ");
							x = input.next().charAt(0);
							if(x == 'y'){ clearConsole(); ManageItemCatogery(); return;}
							else{System.out.printf("|                                                                    |%n"); continue L2;}			
						}	
					}
				}
				if( i == ItemCatogery.length-1){
					System.out.printf("|           Cant Find this Category Name Please Try Again            |%n");
					System.out.printf("|                                                                    |%n");	
				}
			} 	
		}	
	}	
	public static void RemoveItemcatogery(int index){
		
		String[] temp = new String [ItemCatogery.length - 1];
		for (int i = 0; i < temp.length; i++){
			if(i >= index){ temp[i] = ItemCatogery[i+1];}
			else{temp[i] = ItemCatogery[i];}
		}
		ItemCatogery = temp;
		
		if(ItemCatogery.length == 0){
			flag2 = false;
			clearConsole();
			System.out.printf("|     ALL  Item Catogery Name Deleted. Please Add Item Catogery      |%n");
			System.out.printf("|********************************************************************|%n");	
			ManageItemCatogery();	
		}
		
		 
	}
	
	public static void UpdateItemCategory(){
		System.out.print("----------------------------------------------------------------------\n");
		System.out.print("|                        UPDATE ITEM CATOGERY                        |\n");
		System.out.print("----------------------------------------------------------------------\n");

L1:		while(true){	
			System.out.printf("|     %-40s :  ","Enter the Catogery Name (for Update)");
			String name = input.next();
			System.out.printf("|                                                                    |%n");
			
			for (int i = 0; i < ItemCatogery.length; i++){
				
				if(name.equals(ItemCatogery[i])){
					System.out.printf("|     %-40s :  ","Enter the NEW Catogery Name ");
					String newName = input.next();
					ItemCatogery[i] = newName;
					System.out.printf("|     ******* Category Name Updated *******************|             |%n");
					System.out.printf("|--------------------------------------------------------------------|%n");
					System.out.printf("|                                                                    |%n");
					
L2:					while(true){
						System.out.printf("|     %-40s :  ","Do You Need Update More - ");
						char x = input.next().charAt(0);
						if( x == 'y'){continue L1;}			
						else{
							System.out.printf("|     %-40s :  ","Do You Need Go PREVOIUS PAGE ");
							x = input.next().charAt(0);
							if( x == 'y'){ clearConsole(); ManageItemCatogery(); return; }
							else{System.out.printf("|                                                                    |%n"); continue L2;}						
						}
					}
				}
				if(i == ItemCatogery.length - 1){
					System.out.printf("|           Cant Find this Category Name Please Try Again            |%n");
					System.out.printf("|                                                                    |%n");
				}
			}
		}	
	}

	public static void AddItem(){
		
L1:		while(true){
			System.out.print("----------------------------------------------------------------------\n");
			System.out.print("|                               ADD ITEM                             |\n");
			System.out.print("----------------------------------------------------------------------\n");
			System.out.printf("|     %-40s :  ","Enter the Item Code");
			String c = input.next();						
			// need to Check Item Code Duplication// 
			for (int i = 0; i < ItemCode.length ; i++){
				if(c.equals(ItemCode[i])){clearConsole(); System.out.printf("|               Duplicate Item code!! Please Try again               |%n"); continue L1;}
			}
			ItemCode = growc(ItemCode);
			ItemCode[ItemCode.length - 1] = c;
			
			ItemDetails = growItemDetails();
			
			for (int i = (ItemDetails.length - 1); i < ItemDetails.length; i++){
				for (int j = 0; j < ItemDetails[i].length; j++){
					if(j == 0){ItemDetails[i][j] = c;}
					
					if(j == 1){
						System.out.printf("|     Suppliers List                                                 |%n");
						System.out.printf("|     -------------------------------------------                    |%n");
						System.out.printf("|     | %-10s | %-10s| %-15s|                    |%n","  SUP No","  SUP ID","   SUP NAME");
						System.out.printf("|     -------------------------------------------                    |%n");	
						for (int k = 0; k < supName.length; k++){
							for (int l = 0; l < supName[k].length ; l++){
								System.out.printf("|     | %-10d | %-10s| %-15s|                    |%n",(k+1),supId[k],supName[k][l]);
								System.out.printf("|     -------------------------------------------                    |%n");	
							}
							
						}
						System.out.printf("|                                                                    |%n");
						System.out.printf("|                                                                    |%n");	
L2:						while(true){
							System.out.printf("|     %-40s :  ","Enter the Supplier Number");
							int Snum = input.nextInt();
							if(Snum > supId.length || Snum < 1){System.out.printf("|     Invalid Number Please try again                                |%n"); continue L2;}
							else{
								ItemDetails[i][j] = supId[Snum-1]; break L2; 
							}							 
						}
					}
					
					if( j == 2){
						System.out.printf("|     Item Categories List                                           |%n");
						System.out.printf("|     ---------------------------------                              |%n");
						System.out.printf("|     | %-10s| %-15s|                                 |%n","  CAT No","CATEGORY NAME");
						System.out.printf("|     ---------------------------------                              |%n");	
						for (int m = 0; m < ItemCatogery.length; m++){  
							System.out.printf("|     | %-10d| %-15s|                                 |%n",(m+1),ItemCatogery[m]);
							System.out.printf("|     ---------------------------------                              |%n");	
								
						}
						System.out.printf("|                                                                    |%n");
						System.out.printf("|                                                                    |%n");	
L3:						while(true){
							System.out.printf("|     %-40s :  ","Enter the Category Number");
							int Cnum = input.nextInt();
							if(Cnum > ItemCatogery.length || Cnum < 1){System.out.printf("|     Invalid Number Please try again                                |%n"); continue L3;}
							else{
								ItemDetails[i][j] = ItemCatogery[Cnum-1]; break L3; 
							}							 
						}	
					}
					if( j == 3){
						System.out.printf("|                                                                    |%n");
						System.out.printf("|     %-40s :  ","Enter the Decription");
						
						String des = input.next();
						Decription = growc(Decription);
						
						Decription[Decription.length - 1] = des;
						ItemDetails[i][j] = Decription[Decription.length - 1];
						System.out.printf("|                                                                    |%n");
						
					}	
					if(j == 4){
						System.out.printf("|                                                                    |%n");
						System.out.printf("|     %-40s :  ","Enter the Unit Price");
						
						double up = input.nextDouble();
						UnitPrice = growUp(UnitPrice);
						
						UnitPrice[UnitPrice.length - 1] = up; 
						String p = String.valueOf(UnitPrice[UnitPrice.length - 1]);  // convert double to String
						
						ItemDetails[i][j] = p;
						System.out.printf("|                                                                    |%n");
							
					}
					if( j == 5){
						System.out.printf("|                                                                    |%n");
						System.out.printf("|     %-40s :  ","Enter the Qty on Hand");
						
						String Qty = input.next();
						QtyOnHand = growc(QtyOnHand);
						
						QtyOnHand[QtyOnHand.length - 1] = Qty; 
						ItemDetails[i][j] =	QtyOnHand[QtyOnHand.length - 1];
						System.out.printf("|                                                                    |%n");
						
					}	
				}
				System.out.printf("|     %-40s :  ","Do You Need Add another Item");
				char x = input.next().charAt(0);
				if(x == 'y'){clearConsole(); continue L1;} else {clearConsole(); StockManage(); break L1;}
				
			}		
		}
	}
	public static String[][] growItemDetails(){
		
		String temp[][] = new String[ItemDetails.length+1][6];
		
		for (int i = 0; i < ItemDetails.length; i++){	
			for (int j = 0; j < ItemDetails[i].length; j++){
				temp[i][j] = ItemDetails[i][j] ;
			}		
		}
		
		ItemDetails = temp;
		return temp;	
	}	
	public static String [] growc(String [] ar){
		
		String[] temp = new String [ar.length+1];
		for (int i = 0; i < ar.length; i++){
			temp[i] = ar[i];
		}
		ar = temp;
		return ar;
	
	}
	public static double[] growUp(double[] ar){
		
		double[] temp = new double[ar.length+1];
		for (int i = 0; i < ar.length; i++){
			temp[i] = ar[i];
		}
		ar = temp;
		return ar;
		
	}
	public static void GetItemSuppliersWise(){
		
L1:		while(true){
			System.out.print("----------------------------------------------------------------------------\n");
			System.out.print("|                           GET ITEM SUPPLIER WISE                         |\n");
			System.out.print("----------------------------------------------------------------------------\n");
			System.out.printf("|                                                                          |%n");
			System.out.printf("|                                                                          |%n");
			System.out.printf("|  %-35s :  ","Enter the Suuplier ID");
			String id = input.next();
			
			for (int i = 0; i < supId.length; i++){
				if(id.equals(supId[i])){
					System.out.printf("|  %-35s : %-10s                        |%n","Suppler Name is",supName[i][0]);
					System.out.printf("|                                                                          |%n");
					System.out.printf("|                                                                          |%n");
					System.out.print("----------------------------------------------------------------------------\n");
					System.out.printf("| %-12s | %-12s | %-12s | %-12s | %-12s |%n","Item Code","DESCRIPTION","Unit Price","Qty on Hand","CATEGORY");
					System.out.print("----------------------------------------------------------------------------\n");
					for (int j = 0; j < ItemDetails.length; j++){
						boolean f = false; 
						if(ItemDetails[j][1].equals(id)){
							f = true;
							System.out.printf("| %-12s | %-12s | %-12s | %-12s | %-12s |%n",ItemDetails[j][0],ItemDetails[j][3],ItemDetails[j][4],ItemDetails[j][5],ItemDetails[j][2]);		
							System.out.print("----------------------------------------------------------------------------\n");
						}
						if(j == (ItemDetails.length-1) ){
							if (f== false){
								System.out.printf("|                                                                          |%n");
								System.out.printf("|   ----------------------------Not Item added--------------------------   |%n");
								System.out.print("----------------------------------------------------------------------------\n");
							}
						}
					
					}	
					System.out.printf("|  %-35s :  ","Do you need Search more");	
					char x = input.next().charAt(0);
					if(x == 'y'){clearConsole(); continue L1;} else {clearConsole(); StockManage(); break L1;}
				}
				if(i == supId.length - 1){
					clearConsole();
					System.out.printf("|              Cant Find Supplier ID!!!     Please Try Again               |%n");
					System.out.printf("|                                                                          |%n");
				}	
			}			
		}
	}
	
	public static void ViewItems(){
		System.out.print("------------------------------------------------------------------------------\n");
		System.out.print("|                                 VIEW ITEMS                                 |\n");
		System.out.print("------------------------------------------------------------------------------\n");
		System.out.printf("|                                                                            |%n");
		System.out.printf("|                                                                            |%n");
		for (int i = 0; i < ItemCatogery.length; i++){
			System.out.printf("| %15s                                                            |%n",ItemCatogery[i]);
			System.out.print("------------------------------------------------------------------------------\n");
			System.out.printf("| %-10s | %-10s | %-14s | %-14s | %-14s |%n","SupID","Item Code","Description","Price","Qty");
			System.out.print("------------------------------------------------------------------------------\n");		
			for (int j = 0; j < ItemDetails.length; j++){
				
				if(ItemCatogery[i].equals(ItemDetails[j][2])){ 
					
					System.out.printf("| %-10s | %-10s | %-14s | %-14s | %-14s |%n",ItemDetails[j][1],ItemDetails[j][0],ItemDetails[j][3],ItemDetails[j][4],ItemDetails[j][5]);		
					System.out.print("------------------------------------------------------------------------------\n");	
				}	
			}	
			System.out.printf("|                                                                            |%n");
		}	
L1:		while(true){
			System.out.printf("|                                                                            |%n");
			System.out.printf("|     Go to Previous page (Press y)  : ");
			char x = input.next().charAt(0);
			if(x == 'y'){clearConsole(); StockManage(); break L1;}else{continue L1;}
		}
		
	} 
