				}
					
			}else{
				clearConsole();
				System.out.print("----------------------------------------------------------------------\n");
				System.out.print("|                               ADD ITEM                             |\n");
				System.out.print("----------------------------------------------------------------------\n");
				System.out.printf("|********************************************************************|%n");	
