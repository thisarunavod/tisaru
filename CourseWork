		System.out.printf("|     -------------------------------------------                    |%n");
		System.out.printf("|     | 5 | %-35s |    	             |%n"," TO EXIT THE SYSTEM");	
		System.out.printf("|     -------------------------------------------                    |%n");
		System.out.printf("|                                                                    |%n");
		System.out.printf("|                                                                    |%n");
		
		
L1:		while(true){
			System.out.printf("|     GO (Please Input Number) : ");
			answer = input.nextInt();
			if(answer > 5 | answer < 0){System.out.printf("|     Invalid Number !!!  Enter the Correct numbers      %n"); continue L1;}
			else{break L1;}
		}	
		if(answer == 4){
			System.out.printf("|                                                                    |%n");
			System.out.printf("|____________________________________________________________________|%n");
			clearConsole();
			LogingPage();
		}
		if(answer == 5){
			System.out.printf("|                                                                    |%n");
			System.out.printf("|____________________________________________________________________|%n");
			ExitSystem();
							
		}	
		if(answer == 1){
			System.out.printf("|                                                                    |%n");
			System.out.printf("|____________________________________________________________________|%n");
			clearConsole();
			ChangeCredentials();
		}
		if(answer == 2){
			System.out.printf("|                                                                    |%n");
			System.out.printf("|____________________________________________________________________|%n");
			clearConsole();
			SupplierManage();
		}
		if(answer == 3){
			System.out.printf("|                                                                    |%n");
			System.out.printf("|____________________________________________________________________|%n");
			clearConsole();
			StockManage();
		}
		
		
		
	}
