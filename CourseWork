		System.out.printf("|     | 1 | %-35s |    	             |%n"," TO MANAGE ITEM CATOGERY");
		System.out.printf("|     -------------------------------------------                    |%n");
		System.out.printf("|     | 2 | %-35s |    	             |%n"," TO ADD ITEM");
		System.out.printf("|     -------------------------------------------                    |%n");
		System.out.printf("|     | 3 | %-35s |    	             |%n"," TO GET ITEM SUPPLIER WISE");
